# notify-send -t 1 "$speakerVolume" -h string:bgcolor:#000000 -h string:fgcolor:#ffffff 
dunstify -r 1 -t 1 "Volume: $speakerVolume" -h string:bgcolor:#000000 -h string:fgcolor:#ffffff 
