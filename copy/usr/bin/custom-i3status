#!/bin/bash

i3status | while :
do
	read line
	isMicOn="$(amixer get 'Capture',0 | grep '\[on\]')"
    	memUsage="$(free -m | awk 'NR==2{printf "%.2f%%", $3*100/$2}')"
        layout=$(xkblayout-state print %s | awk '{print toupper($0)}')
	if [ "$isMicOn" ]; 
	then
		echo "Layout: $layout | Microphone is On | RAM Usage: $memUsage | $line" || exit 1
	else
		echo "Layout: $layout | Microphone is Off | RAM Usage: $memUsage | $line" || exit 1
	fi
done
