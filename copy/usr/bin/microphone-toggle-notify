#!/bin/bash

isMicrophoneOn="$(amixer get 'Capture',0 | grep '\[on\]')"
#if [amixer get 'Capture',0 | grep "\[on\]"]
if [ "$isMicrophoneOn" ];
then
    # twmnc -c "Microphone On" --fg red -d 500 -s 25 --fs 16
    # notify-send -t 1 "Microphone On" -h string:bgcolor:#00cc00 -h string:fgcolor:#000000
    dunstify -r 1 -t 1 "Microphone On" -h string:bgcolor:#00cc00 -h string:fgcolor:#000000
else
    # twmnc -c "Microphone Off" --fg red -d 500 -s 25 --fs 16
    # notify-send -t 1 "Microphone Off" -h string:bgcolor:#cc0000 -h string:fgcolor:#000000
    dunstify -r 1 -t 1 "Microphone Off" -h string:bgcolor:#cc0000 -h string:fgcolor:#000000
fi
