#!/bin/bash

my_time=0.1

com_1="vim"
com_2="vifm"
com_3=":"
com_4=":"
com_5=":"

xterm -e "cd $1; $com_1; bash" &
sleep $my_time
xterm -e "cd $1; $com_2; bash" &
sleep $my_time
xterm -e "cd $1; $com_3; bash" &
sleep $my_time
xterm -e "cd $1; $com_4 $1 $1; bash" &
sleep $my_time
xterm -e "cd $1; $com_5 $1 $1; bash" &
